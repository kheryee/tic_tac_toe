<div class="container">
  <h1>Lobby</h1>

  Welcome back <%= @user.username %><br><br>


  <form action="/create_room" method="post">
    <input type="text" name="name" value="<%= @user.username %>'s <%= @words[rand(0..5)] %> room">
    <input type="submit" value="Create your own room">
  </form><br><br>

  Join a room:<br><br>
  <% @rooms.each do |room| %>
    <form action="/room/<%= room.id %>/join" method="post">
      <input type="hidden" name="_method" value="patch">
      <input type="submit" value="<%= room.name%>">
    </form><br>
  <% end %>

  <form class="right" action="/logout" method="get">
    <input type="submit" value="Log out">
  </form>
</div>